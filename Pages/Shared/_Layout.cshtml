<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CosmicWorks Inventory</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" rel="stylesheet" integrity="sha256-8M+b2Hj+vy/2J5tZ9pYDHeuPD59KsaEZn1XXj3xVhjg=" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

</head>
<body class="vh-100 d-flex flex-column justify-content-start">
    <nav class="navbar navbar-dark bg-dark">
        <!-- ... (your navbar content) ... -->
        <div class="navbar-collapse flex-grow-0">
            <ul class="navbar-nav">
                @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown" style="width: 5%;">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @HttpContextAccessor.HttpContext.User.Identity.Name
                        </a>
                        <div class="dropdown-menu" aria-labelledby="userDropdown" style="position: absolute; right: 0;">
                            <a class="dropdown-item" href="/Logout">Logout</a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item" style="width: 5%;">
                        <a class="nav-link" href="/Login">Sign In</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <main class="d-flex flex-grow-1 flex-row justify-content-start align-items-stretch">
        <div class="d-flex flex-column flex-shrink-0 bg-dark">
            <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" asp-page="/Index" data-toggle="tooltip" title="Home">
                        <i class="bi bi-house-door"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" asp-page="/products" data-toggle="tooltip" title="Products">
                        <i class="bi bi-clipboard-data"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" asp-page="/addproduct" data-toggle="tooltip" title="Add Product">
                        <i class="bi bi-plus-circle-fill"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" asp-page="/deleteproduct" data-toggle="tooltip" title="Delete Product">
                        <i class="bi bi-eraser"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link link-light py-3 border-bottom rounded-0" current-route current-route-class="active" asp-page="/editproduct" data-toggle="tooltip" title="Edit Product">
                        <i class="bi bi-pen"></i>
                    </a>
                </li>
            </ul>

        </div>
        <article class="customMainContainer pb-2">
            @RenderBody()
        </article>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous" async></script>
    <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>
</body>
</html>